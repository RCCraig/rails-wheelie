<div class="container"> 
  <div class="row justify-content-md-center">
    <%= link_to 'New Group', new_group_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <% if @user.groups.any? %>
      <div class="col-sm-7">
        <% @user.groups.each do |group| %>
          <div class="col-sm-4">
            <ul class="list-group">
              <li class="list-group-item">
                <%= link_to group.name, group %>
              </li>
            </ul>       
          </div>
        <% end %>
      </div>
    <% else %>
      <h3>You haven't joined any groups.</h3>
      <p>Add a Group or Find a Group</p>
    <% end %>    
  </div>
</div>

 


   

  
  
    

