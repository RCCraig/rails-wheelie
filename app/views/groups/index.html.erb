<div class="container">
  <div class='row'>
    <% @groups.each do |group| %>  
      <div class="col-md-4 card">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to group.name, group %>
            <span class="badge badge-pill badge-primary"><%= group.users.size  %></span>
          </h4>        
        </div>      
      </div>  
    <% end %>  
  </div>  
</div>


